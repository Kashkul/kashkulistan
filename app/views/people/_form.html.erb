<%= form_for @person, html: { multipart: true, class: "form-horizontal center" } do |f| %>
	<div class="form-group">
		<%= f.label :name %><br>
		<%= f.text_field :name, class: "form-control" %><br>	
	</div>
	<div class="form-group">
		<%= f.label :role %><br>
		<%= f.text_field :role, class: "form-control" %><br>
	</div>
	<div class="form-group">
		<%= f.label :about %><br>
		<%= f.text_area :about, class: "form-control" %><br>	
	</div>	
	<div class="form-group">
		<%= f.label :photo %><br>
		<%= f.file_field :photo %><br>
	</div>

	<%= f.submit %>

<% end %>