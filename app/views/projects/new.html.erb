<%= form_for @project, class: "form-horizontal", html: { multipart: true } do |f| %>

	<%= f.label :name %><br>
	<%= f.text_field :name %><br>	
	<%= f.label :description %><br>
	<%= f.text_area :description %><br>	
	<%= f.label :authors %><br>
	<%= f.text_field :authors %><br>	
	<%= f.label :url %><br>
	<%= f.text_field :url %><br>	
	<%= f.label :photo %><br>
	<%= f.file_field :photo %><br>

	<%= f.submit %>

<% end %>